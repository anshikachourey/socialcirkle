rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- users (unchanged, keep whatever you already had) ---
    match /users/{uid} {
      allow read: if true;               // or your existing logic
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // --- chats (NEW) ---
    match /chats/{chatId} {
      // Allow a signed-in user to read a chat only if they're a member
      allow read: if request.auth != null
                  && request.auth.uid in resource.data.members;

      // Allow create only if members is an array including the creator
      allow create: if request.auth != null
                    && request.resource.data.members is list
                    && request.auth.uid in request.resource.data.members;

      // Allow updates/deletes only to members
      allow update, delete: if request.auth != null
                            && request.auth.uid in resource.data.members;
    }
  }
}

